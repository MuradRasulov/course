<Page x:Class="Course.Windows.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicesPage">
    <Grid>
        <DockPanel>
            <Label DockPanel.Dock="Top" FontSize="35" FontWeight="Bold" Content="Услуги" Margin="0 0 0 25" />
        </DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Label Content="Поиск: " FontSize="18" VerticalAlignment="Center" />
            <TextBox Width="200"/>
            <Label Content="Сортировать по цене: " Margin="10 0 0 0" VerticalAlignment="Center" />
            <ComboBox Width="150"/>
            <Label Content="Фильтрация по скидке: " Margin="10 0 0 0" VerticalAlignment="Center" />
            <ComboBox Width="150"/>
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock>Показано <Run>100</Run> из <Run>250</Run> записей</TextBlock>
        </StatusBar>
        <ListView>
            ...
        </ListView>
    </Grid>
</Page>
