<Page x:Class="Course.Windows.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Course.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Успешный вход">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Вы успешно вошли!" FontSize="30" FontWeight="SemiBold"/>
            <Button Height="30" Content="Далее" FontSize="15" Margin="0 10 0 0"/>
            <Button Height="30" Content="Назад" Margin="0 10" FontSize="15" Click="Back_Button"/>
        </StackPanel>
    </Grid>
</Page>
